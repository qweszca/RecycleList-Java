<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:transformPivotX="2dp"
        android:translationZ="2dp"
        xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
                android:padding="10dp"
              android:layout_height="match_parent">
    <TextView
            android:id="@+id/task_item_name"
            android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="计算机网络"
                android:textAllCaps="true"
              android:gravity="center_vertical"
              android:textSize="16dp"

              android:textColor="#000"/>
    <TextView android:id="@+id/task_item_time"
            android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="60mins"
              android:textColor="#000"
              android:layout_marginTop="8dp"
              android:gravity="center_vertical"
              android:textSize="12dp"
              />
</LinearLayout>
    <LinearLayout android:layout_width="wrap_content"
                  android:orientation="horizontal"
                  android:layout_alignParentRight="true"
                  android:layout_height="wrap_content">
        <TextView
                android:id="@+id/start_task"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="开始"
                android:textSize="16dp"
                android:layout_marginTop="20dp"
                android:textColor="#000"
                />
        <TextView android:layout_width="50dp"
                android:id="@+id/del_task_item"
                android:layout_height="30dp"
                  android:layout_marginTop="20dp"
                  android:textSize="16dp"
                android:textColor="#000"
                android:text="删除"
                />
    </LinearLayout>
<TextView android:layout_width="match_parent"
          android:id="@+id/item_bottom_bar"
          android:layout_height="2dp"
          android:layout_alignParentBottom="true"
          android:background="#CCC7C7"/>
</RelativeLayout>
